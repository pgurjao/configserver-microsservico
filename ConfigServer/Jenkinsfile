pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'Hello Big World' 
            }
        }
    }
    post {
		success {
			echo 'Esteira finalizada com sucesso!'
        }
		failure {
			echo 'Esteira falhou...'
        }
    }
}